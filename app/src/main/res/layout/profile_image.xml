<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="employee"
            type="com.pbasolutions.android.model.MEmployee" />
    </data>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow android:layout_marginTop="10dp">
            <TextView
                style="@style/TableLabel"
                android:text="@string/label_profpic" />
            <ImageView
                android:id="@+id/imageViewProfPic"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_width="@dimen/dimen_small_pic"
                android:layout_height="@dimen/dimen_small_pic"
                android:layout_column="1"
                android:scaleType="fitXY"
                android:src="@drawable/camera" />
        </TableRow>
    </TableLayout>
</layout>
