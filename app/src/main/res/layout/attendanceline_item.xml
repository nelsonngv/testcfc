<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="atLine"
            type="com.pbasolutions.android.model.MAttendanceLine" />
    </data>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_top">
            <CheckBox
                style="@style/LineCheckBoxD"
                android:id="@+id/removePrl"
                android:gravity="center" />
            <TextView
                style="@style/LineInfoD"
                android:id="@+id/prlProdName"
                android:text="@{atLine.checkInDate}"/>
            <TextView
                style="@style/LineQtyD"
                android:id="@+id/prlQtyRequested"
                android:text="@{atLine.checkOutDate}"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/_UUID"
                android:text="@{atLine._UUID}"
                android:visibility="invisible"/>
        </TableRow>
        <View style="@style/Line" android:layout_width="match_parent"/>
    </TableLayout>
</layout>