<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="atLine"
            type="com.pbasolutions.android.model.MAttendanceLine" />
    </data>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">
            <CheckBox
                style="@style/LineCheckBoxD"
                android:id="@+id/removePrl"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:attr/dividerHorizontal"
                    android:showDividers="middle"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_width="match_parent">

                        <TextView
                            android:id="@+id/at_partner_id"
                            style="@style/TableValue2"
                            android:layout_span="2"
                            android:text="@{atLine.C_BPartner_Name}"
                            android:textStyle="bold"/>
                    </TableRow>

                    <TableRow
                        android:id="@+id/at_row_isabsent"
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle"
                        android:visibility="gone">

                        <TextView
                            style="@style/TableLabel"
                            android:text="Absent"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:orientation="vertical"
                            >

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="?android:attr/dividerHorizontal"
                                android:showDividers="middle">

                                <TableRow
                                    android:divider="?android:attr/dividerVertical"
                                    android:showDividers="middle">

                                    <TextView
                                        android:id="@+id/at_isabsent"
                                        style="@style/TableValue2"
                                        android:layout_weight="0.35"
                                        android:text='@{atLine.IsAbsent.equalsIgnoreCase("Y") ? "Yes" : "No"}'/>

                                    <TextView
                                        android:id="@+id/at_absentdaydesc"
                                        style="@style/TableLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_weight="0.15"
                                        android:text="Day"
                                        />

                                    <TextView
                                        android:id="@+id/at_absentday"
                                        style="@style/TableValue2"
                                        android:layout_weight="0.5"
                                        android:text="@{atLine.HR_DaysType}"/>
                                </TableRow>
                            </TableLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/at_row_isoff"
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle"
                        android:visibility="gone">

                        <TextView
                            style="@style/TableLabel"
                            android:text="Off Day"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:orientation="vertical"
                            >

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="?android:attr/dividerHorizontal"
                                android:showDividers="middle">

                                <TableRow
                                    android:divider="?android:attr/dividerVertical"
                                    android:showDividers="middle">

                                    <TextView
                                        android:id="@+id/at_isoff"
                                        style="@style/TableValue2"
                                        android:layout_weight="0.35"
                                        android:text='@{atLine.IsOff.equalsIgnoreCase("Y") ? "Yes" : "No"}'/>

                                    <TextView
                                        android:id="@+id/at_offdaydesc"
                                        style="@style/TableLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_weight="0.15"
                                        android:text="Day"
                                        />

                                    <TextView
                                        android:id="@+id/at_offday"
                                        style="@style/TableValue2"
                                        android:layout_weight="0.5"
                                        android:text="@{atLine.HR_DaysType}"/>
                                </TableRow>
                            </TableLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/at_row_isrest"
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle"
                        android:visibility="gone">

                        <TextView
                            style="@style/TableLabel"
                            android:text="Rest Day"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:orientation="vertical"
                            >

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="?android:attr/dividerHorizontal"
                                android:showDividers="middle">

                                <TableRow
                                    android:divider="?android:attr/dividerVertical"
                                    android:showDividers="middle">

                                    <TextView
                                        android:id="@+id/at_isrest"
                                        style="@style/TableValue2"
                                        android:layout_weight="0.35"
                                        android:text='@{atLine.IsRest.equalsIgnoreCase("Y") ? "Yes" : "No"}'/>

                                    <TextView
                                        android:id="@+id/at_restdaydesc"
                                        style="@style/TableLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_weight="0.15"
                                        android:text="Day"
                                        />

                                    <TextView
                                        android:id="@+id/at_restday"
                                        style="@style/TableValue2"
                                        android:layout_weight="0.5"
                                        android:text="@{atLine.HR_DaysType}"/>
                                </TableRow>
                            </TableLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/at_row_checkindate"
                        android:layout_width="match_parent"
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle">

                        <TextView
                            style="@style/TableLabel"
                            android:text="Time"/>

                        <TextView
                            android:id="@+id/at_checkindate"
                            style="@style/TableValue2"
                            android:text="@{@string/attendance_to(atLine.CheckInDate, atLine.CheckOutDate)}"
                            />
                    </TableRow>

                    <TableRow
                        android:id="@+id/at_row_leavetype"
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle">

                        <TextView
                            style="@style/TableLabel"
                            android:text="LeaveType"/>

                        <TextView
                            android:id="@+id/at_leavetype"
                            style="@style/TableValue2"
                            android:text="@{atLine.HR_LeaveType_Name}"/>
                    </TableRow>

                    <TableRow
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle">

                        <TextView
                            style="@style/TableLabel"
                            android:text="Comments"/>

                        <TextView
                            android:id="@+id/at_comments"
                            style="@style/TableValue2"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="5"
                            android:paddingBottom="6dp"
                            android:text="@{atLine.Comments}"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
            <!--<TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/_UUID"
                android:text="@{atLine._UUID}"
                android:visibility="gone"/>-->
        </TableRow>
        <View style="@style/Line"
              android:layout_width="match_parent"/>
    </TableLayout>
</layout>
