<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="atLine"
            type="com.pbasolutions.android.model.MAttendanceLine" />
    </data>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">
            <CheckBox
                style="@style/LineCheckBoxD"
                android:id="@+id/removePrl"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="vertical"
            >
                <TableLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:attr/dividerHorizontal"
                    android:showDividers="middle">
                    <TableRow
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle">
                        <TextView
                            android:text="Employee"
                            style="@style/TableLabel"/>
                        <TextView
                            android:id="@+id/at_partner_id"
                            android:text="@{atLine.C_BPartner_Name}"
                            android:layout_span="3"
                            style="@style/TableValue2"/>
                    </TableRow>
                    <TableRow
                        android:id="@+id/at_row_isabsent"
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle">
                        <TextView
                            android:text="Absent"
                            style="@style/TableLabel"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:orientation="vertical"
                            >
                            <TableLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="?android:attr/dividerHorizontal"
                                android:showDividers="middle">
                                <TableRow
                                    android:divider="?android:attr/dividerVertical"
                                    android:showDividers="middle">
                                    <TextView
                                        android:id="@+id/at_isabsent"
                                        android:text="@{atLine.IsAbsent}"
                                        android:layout_weight="0.2"
                                        style="@style/TableValue2"/>
                                    <TextView
                                        android:text="Day"
                                        android:layout_weight="0.3"
                                        android:layout_width="wrap_content"
                                        style="@style/TableLabel"
                                        />
                                    <TextView
                                        android:id="@+id/at_isday"
                                        android:layout_weight="0.5"
                                        android:text="@{atLine.HR_DaysType}"
                                        style="@style/TableValue2"/>
                                </TableRow>
                            </TableLayout>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:id="@+id/at_row_checkindate"
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle">
                        <TextView
                            android:text="Checkin"
                            style="@style/TableLabel"/>
                        <TextView
                            android:id="@+id/at_checkindate"
                            style="@style/TableValue2"
                            android:text="@{atLine.CheckInDate}"
                            />
                    </TableRow>
                    <TableRow
                        android:id="@+id/at_row_checkoutdate"
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle">
                        <TextView
                            android:text="Checkout"
                            style="@style/TableLabel"/>
                        <TextView
                            android:id="@+id/at_checkoutdate"
                            android:text="@{atLine.CheckOutDate}"
                            style="@style/TableValue2"/>
                    </TableRow>
                    <TableRow
                        android:id="@+id/at_row_leavetype"
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle">
                        <TextView
                            android:text="LeaveType"
                            style="@style/TableLabel"/>
                        <TextView
                            android:id="@+id/at_leavetype"
                            android:text="@{atLine.HR_LeaveType_Name}"
                            style="@style/TableValue2"/>
                    </TableRow>
                    <TableRow
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle">
                        <TextView
                            android:text="Comments"
                            style="@style/TableLabel"/>
                        <TextView
                            android:id="@+id/at_comments"
                            android:layout_weight="1"
                            android:text="@{atLine.Comments}"
                            style="@style/TableValue2"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/_UUID"
                android:text="@{atLine._UUID}"
                android:visibility="invisible"/>
        </TableRow>
        <View style="@style/Line" android:layout_width="match_parent"/>
    </TableLayout>
</layout>
