<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:attr/dividerHorizontal"
    android:showDividers="middle"
    android:weightSum="1">
   <TextView
        style="@style/TableLabel2"
        android:text="Testing"
        android:id="@+id/scanSerialTextInfo"
       android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/scanSerialTextID"
        style="@style/TableLabel2"
        android:layout_gravity="center"
        />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center_horizontal"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        >
        <TableRow>
            <LinearLayout style="@style/PTableVirtRowW">
                <TextView
                    style="@style/TableInfoLabel"
                    android:text="Latitude"
                    />
                <TextView
                    style="@style/TableValue"
                    android:id="@+id/serialLatitude"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout style="@style/PTableVirtRowW">
                <TextView
                    style="@style/TableInfoLabel"
                    android:text="Longitude"
                    />
                <TextView
                    style="@style/TableValue"
                    android:id="@+id/serialLongitude"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout style="@style/PTableVirtRowW">
                <TextView
                    style="@style/TableInfoLabel"
                    android:text="Timestamp"
                    />
                <TextView
                    style="@style/TableValue"
                    android:id="@+id/serialTimestamp"
                    />
            </LinearLayout>
            </TableRow>
        <TableRow>
            <LinearLayout style="@style/PTableVirtRowW">
                <TextView style="@style/TableInfoLabel"/>

                <EditText
                    style="@style/TableValue"
                    android:id="@+id/serialComment"
                    android:hint="Write Your Comment"
                    />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
