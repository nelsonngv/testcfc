<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="pr"
            type="com.pbasolutions.android.model.MPurchaseRequest" />
    </data>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                       style="@style/TableLabelWide"
                        android:text="@string/req_label_docno"
                    />
                    <TextView
                        style="@style/Value"
                        android:id="@+id/prDocNo"
                        android:text="@{pr.DocumentNo}"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">
                    <TextView
                        style="@style/TableLabelWide"
                        android:text="@string/reqdetails_label_status" />
                    <TextView
                        android:id="@+id/prStatus"
                        style="@style/Value"
                        android:text="@{pr.Status}"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">
                    <TextView
                        style="@style/TableLabelWide"
                        android:text="@string/reqdetails_label_projloc"
                        />
                    <TextView
                        android:id="@+id/prProjLoc"
                        style="@style/Value"
                        android:text="@{pr.ProjLocName}"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">
                    <TextView
                        style="@style/TableLabelWide"
                        android:text="@string/reqdetails_label_sel_requested_date"
                        />
                    <TextView
                        android:id="@+id/prRequestDate"
                        style="@style/TableValueDate"
                        android:textColor="#F000"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginRight="@dimen/margin_right"
                        android:text="@{pr.RequestDate}"
                        android:layout_marginBottom="@dimen/margin_bottom" />
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="end">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/table_margin_left"
                    android:layout_marginTop="@dimen/margin_top">
                    <TextView
                        style="@style/TableInfoLabel"
                        android:text="@string/label_lines"
                    />
    <!--                <ImageButton
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_marginLeft="120dp"
                        android:background="@drawable/plus"
                        android:id="@+id/addPrLine"/>
                    <ImageButton
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/minus"
                        android:id="@+id/removePrLine"/>
                        -->
                </TableRow>
            </TableLayout>
            <TableLayout
                style="@style/LineRV"
                android:layout_weight="1">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/requisitionline_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</layout>