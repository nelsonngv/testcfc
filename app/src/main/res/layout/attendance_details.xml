<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="pr"
            type="com.pbasolutions.android.model.MPurchaseRequest" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout style="@style/PTableVirtRowW">
                <TextView
                    style="@style/TableInfoLabel"
                    android:text="@string/label_date"
                    />
                <TextView
                    android:id="@+id/prRequestDate"
                    style="@style/TableValueDate"
                    android:hint="Press to Select Date"
                    android:text="@{pr.RequestDate}"
                    android:layout_marginBottom="@dimen/margin_bottom" />
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout style="@style/PTableVirtRowW">
                <TextView
                    style="@style/TableInfoLabel"
                    android:text="@string/label_shift" />
                <EditText
                    android:id="@+id/prStatus"
                    style="@style/TableValue"
                    android:editable="false"
                    android:text="@{pr.Status}"
                    />
                </LinearLayout>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="end">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/table_margin_left"
                android:layout_marginTop="@dimen/margin_top">
                <TextView
                    style="@style/TableInfoLabel"
                    android:text="@string/label_lines"
                />
            </TableRow>
        </TableLayout>
        <TableLayout
            style="@style/LineRV">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/requisitionline_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/prRequest"
                style="@style/PLargeButton"
                android:layout_marginTop="10dp"
                android:text="@string/label_button_submit" />
        </LinearLayout>
    </LinearLayout>
</layout>