<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="line"
            type="com.pbasolutions.android.model.MMovementLine" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="@dimen/margin_top">
            <TableRow>
                <TextView
                    style="@style/TableLabel"
                    android:editable="false"
                    android:text="@string/mvl_label_productname"
                    />
                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:id="@+id/prodName">
                </Spinner>
            </TableRow>
            <TableRow>
                <TextView
                    style="@style/TableLabel"
                    android:text="@string/mvl_label_productvalue"
                    />
                <Spinner
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:id="@+id/prodValue"
                    android:textSize="@dimen/abc_text_size_body_1_material">
                </Spinner>
            </TableRow>

            <TableRow>
                <TextView
                    style="@style/TableLabel"
                    android:text="@string/mvl_label_asi"
                    />
                <Spinner
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:id="@+id/asi"
                    android:textSize="@dimen/abc_text_size_body_1_material">
                </Spinner>
            </TableRow>
            <TableRow>
                <TextView
                    style="@style/TableLabel"
                    android:text="@string/mvl_label_onhandqty"
                    />
                <TextView
                    style="@style/Value"
                    android:inputType="number"
                    android:text="@{String.valueOf(line.QtyOnHand)}"
                    android:id="@+id/qtyOnHand"
                    android:textSize="@dimen/abc_text_size_body_1_material">
                </TextView>
            </TableRow>
            <TableRow>
            <TextView
                style="@style/TableLabel"
                android:text="@string/mvl_label_uom"
                />
            <TextView
                style="@style/Value"
                android:text="@{line.UOMName}"
                android:id="@+id/uom">
            </TextView>
        </TableRow>
            <TableRow>
                <TextView
                    style="@style/TableLabel"
                    android:layout_marginBottom="20dp"
                    android:editable="false"
                    android:text="@string/label_movementqty"
                    />
                <EditText
                    style="@style/Value"
                    android:text="@{String.valueOf(line.MovementQty.doubleValue())}"
                    android:id="@+id/movementQty"
                    android:inputType="numberDecimal">
                </EditText>
                </TableRow>
        </TableLayout>
    </LinearLayout>
</layout>