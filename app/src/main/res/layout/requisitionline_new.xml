<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="prLine"
            type="com.pbasolutions.android.model.MPurchaseRequestLine"/>
    </data>
    <LinearLayout android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="@string/label_productname"
                    style="@style/TableLabel"/>
                <Spinner
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/prlProdNameSpinner"
                    android:layout_column="1"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="@string/label_qty"
                    style="@style/TableLabel"
                    android:inputType="number"/>
                <EditText
                    style="@style/Value"
                    android:id="@+id/prlQty"
                    android:inputType="number"
                    android:text="@{prLine.QtyRequestedString}"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="@string/label_required_date"
                    style="@style/TableLabel"
                    android:textSize="@dimen/abc_text_size_body_1_material"/>
                <EditText
                    style="@style/Value"
                    android:id="@+id/prlDateRequired"
                    android:inputType="date"
                    android:text="@{prLine.DateRequired}"
                    />
            </TableRow>
        </TableLayout>
        <Button
            style="@style/ButtonLast"
            android:id="@+id/savePRLine"
            android:text="Save"/>
        </LinearLayout>
</layout>