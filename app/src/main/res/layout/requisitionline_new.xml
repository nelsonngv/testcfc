<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="prLine"
            type="com.pbasolutions.android.model.MPurchaseRequestLine"/>
    </data>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                >
                <TableRow
                    android:layout_marginTop="10dp">
                    <LinearLayout style="@style/PTableVirtRowW">
                        <TextView
                            android:id="@+id/textViewName"
                            android:text="@string/label_productname"
                            style="@style/TableInfoLabel"/>
                        <com.pbasolutions.android.control.SearchableSpinnerForRequisition
                            style="@style/SpinnerTableValue"
                            app:dlgTitle="@string/title_selectproduct"
                            android:id="@+id/prlProdNameSpinner"/>
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout style="@style/PTableVirtRowW">
                    <TextView
                        android:id="@+id/textViewQty"
                        android:text="@string/label_qty"
                        style="@style/TableInfoLabel"
                        android:inputType="number"/>
                    <EditText
                        style="@style/TableValue"
                        android:id="@+id/prlQty"
                        android:inputType="number"
                        android:text="@{prLine.QtyRequestedString}"
                        />
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout style="@style/PTableVirtRowW">
                        <TextView
                            style="@style/TableInfoLabel"
                            android:text="@string/mvl_label_uom"
                            />
                        <TextView
                            style="@style/TableValue"
                            android:text="@string/title_selectproduct"
                            android:id="@+id/uom">
                        </TextView>
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout style="@style/PTableVirtRowW">
                    <TextView
                        android:text="@string/label_required_date"
                        style="@style/TableInfoLabel"
                        android:textSize="@dimen/abc_text_size_body_1_material"/>
                    <TextView
                        style="@style/TableValueDate"
                        android:id="@+id/prlDateRequired"
                        android:hint="Press to Select Date"
                        android:text="@{prLine.DateRequired}"
                        />
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout style="@style/PTableVirtRowW">
                        <CheckBox
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:id="@+id/is_emergency"
                            android:paddingTop="3dp"
                            android:buttonTint="#707070"
                            android:textColor="#707070"
                            android:text="@string/label_emergency"
                            android:checked="@{prLine.isEmergency.equals(&quot;Y&quot;) ? true : false}"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:id="@+id/reasonRow"
                    android:visibility="gone">
                    <LinearLayout style="@style/PTableVirtRowW">
                        <TextView
                            android:id="@+id/textViewPurcReason"
                            android:text="@string/label_purchase_reason"
                            style="@style/TableInfoLabel"
                            android:textSize="@dimen/abc_text_size_body_1_material"/>
                        <EditText
                            style="@style/TableValueDate"
                            android:id="@+id/prlPurcReason"
                            android:singleLine="false"
                            android:maxLines="5"
                            android:scrollHorizontally="true"
                            android:inputType="textMultiLine|textCapSentences|text"
                            android:text="@{prLine.purchaseReason}"
                            />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</layout>