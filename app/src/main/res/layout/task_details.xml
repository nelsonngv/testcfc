<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="task"
            type="com.pbasolutions.android.model.MProjectTask" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle">
            >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="?android:attr/dividerVertical"
                android:showDividers="middle"
                >

                <TableRow
                    android:divider="?android:attr/dividerVertical"
                    android:showDividers="middle"
                    >

                    <TextView
                        android:id="@+id/taskSeqNo"
                        style="@style/TableLabel"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@{String.valueOf(task.priority)}"
                        android:textSize="@dimen/abc_text_size_subhead_material" />

                    <TextView
                        android:id="@+id/taskName"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:editable="false"
                        android:text="@{task.name}"
                        android:textStyle="bold"
                        android:textSize="@dimen/abc_text_size_subhead_material" />
                </TableRow>
                <TableRow
                    android:divider="?android:attr/dividerVertical"
                    android:showDividers="middle"
                    >
                    <TextView
                        style="@style/TableLabel"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/label_projloc"
                        android:textSize="@dimen/abc_text_size_body_1_material" />

                    <TextView
                        android:id="@+id/taskProjLoc"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@{task.projLocName}"
                        style="@style/Value"
                        />
                </TableRow>

                <TableRow
                    android:divider="?android:attr/dividerVertical"
                    android:showDividers="middle"
                    >

                    <TextView
                        style="@style/TableLabel"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/label_projdesc"/>

                    <TextView
                        android:id="@+id/taskDesc"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@{task.description}"
                        style="@style/Value"
                        />
                </TableRow>
                <TableRow
                    android:divider="?android:attr/dividerVertical"
                    android:showDividers="middle"
                    >
                    <TextView
                        style="@style/TableLabel"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/label_dateassigned"
                        />
                    <TextView
                        android:id="@+id/taskDateAssigned"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@{task.dateAssigned}"
                        style="@style/Value" />
                </TableRow>
                <TableRow
                    android:divider="?android:attr/dividerVertical"
                    android:showDividers="middle"
                    >
                    <TextView
                        style="@style/TableLabel"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/label_duedate"
                        />
                    <TextView
                        android:id="@+id/taskDueDate"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@{task.dueDate}"
                        style="@style/Value" />
                </TableRow>
                <TableLayout android:id="@+id/tlPics"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:divider="?android:attr/dividerHorizontal"
                             android:showDividers="beginning|middle|end">
                    <TableRow android:layout_marginTop="10dp"
                              android:layout_marginBottom="10dp">
                        <TextView
                            style="@style/TableLabel"
                            android:text="@string/label_pretaskpicture" />

                        <ImageView
                            android:id="@+id/pretaskPicture"
                            android:layout_width="@dimen/dimen_small_pic"
                            android:layout_height="@dimen/dimen_small_pic"
                            android:layout_column="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera" />
                    </TableRow>
                    <TableRow android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            style="@style/TableLabel"
                            android:text="@string/label_picture1" />

                        <ImageView
                            android:id="@+id/taskPicture1"
                            android:layout_width="@dimen/dimen_small_pic"
                            android:layout_height="@dimen/dimen_small_pic"
                            android:layout_column="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera" />
                    </TableRow>
                </TableLayout>
                <TableLayout
                    android:id="@+id/tlMorePic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <TextView
                            style="@style/TableLabel" />
                        <Button
                            android:id="@+id/btnMorePic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add More Picture"/>
                    </TableRow>
                </TableLayout>
                <!--<include layout="@layout/task_attachments" />-->
                <TableRow>
                    <TextView
                        android:id="@+id/textViewTaskComments"
                        style="@style/TableLabel"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/taskdetails_label_comment"
                        />

                    <EditText
                        android:id="@+id/taskComments"
                        style="@style/Value"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:editable="true"
                        android:inputType="textCapSentences|textMultiLine"
                        android:minLines="1"
                        android:maxLines="5"
                        android:maxLength="2000"
                        android:hint="Sweep floor, ..."
                        android:text="@{task.comments}"
                        />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="@string/taskdetails_label_status"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                    style="@style/TableLabel"/>
                    <TextView
                        style="@style/Value"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@{task.status}"
                        android:id="@+id/taskStatus"/>

                </TableRow>
            </TableLayout>
            <View style="@style/Line"
                android:layout_width="match_parent"/>
        </LinearLayout>
    </ScrollView>
</layout>